import java.util.Random;

public class Bender {
    public static void main(String[] args) {
        String[] wordListOne = {"лучший", "творческий", "инновационный", "последовательный", "мыслительный", "популярный", "человечный", "взаимный", "динамичный", "совместный"};
        String[] wordListTwo = {"заработанный", "впечатляющий", "воодушевляющий", "непомерный", "контролируемый", "проявляющий", "совершенный", "распределенный", "трудный", "ускоренный"};
        String[] wordListTree = {"- это хорошее правило для жизни и бизнеса", "процесс", "талант", "образец", "экспонат", "период времени", "намеченный путь", "пункт следования"};

        int oneLength = wordListOne.length;
        int twoLength = wordListTwo.length;
        int threeLength = wordListTree.length;

        int rand1 = (int) (Math.random() * oneLength);
        int rand2 = (int) (Math.random() * twoLength);
        int rand3 = (int) (Math.random() * threeLength);

        String phrase = wordListOne[rand1] + " " + wordListOne[rand2] + " " + wordListOne[rand3];

        System.out.println("Все, что нам нужно, - это " + phrase + "!");
    }
}

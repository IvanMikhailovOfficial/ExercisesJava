public class Pro {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Введите цвет светофора");
        String trafficLight = scanner.nextLine();
        switch (trafficLight){
            case "красный":
                System.out.println("вы ввели красный цвет - остановитесь");
                break;
            case "желтый":
                System.out.println("вы ввели желтый цвет - приготовьтесь");
                break;
            case "зеленый":
                System.out.println("вы ввели зеленый цвет - можно продолжить движение");
                break;
            default:
                System.out.println("у светофора нет такого цвета");
        }
    }
}

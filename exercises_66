public class Bender {
    public static void main(String[] args) {
        double contribution = 15000;
        double percent = 0.08;

        for (int year = 1; year <= 6; year ++){
            contribution += contribution * percent;
            System.out.println("На " + year + " год, на вашем счету " + contribution + "рублей!");
        }
    }
}
